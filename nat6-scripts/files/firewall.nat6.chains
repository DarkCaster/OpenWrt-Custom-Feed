#!/bin/sh

# Populate ipv6-nat chains, needed for /usr/share/nat6-scripts/firewall.include script to work,
# becase fw3 does not creating it automatically (at least on OpenWrt 18.06).
# Do not forget to define proper network-device for corresponding zone here (eth0 at this example)

ip6tables -t nat -N zone_wan_postrouting
ip6tables -t nat -N zone_wan_prerouting
ip6tables -t nat -A POSTROUTING -o eth0 -j zone_wan_postrouting
ip6tables -t nat -A PREROUTING -i eth0 -j zone_wan_prerouting

